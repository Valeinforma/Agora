<div class="card text-center">
    <div class="card-header">
		Orador: @capacitacion?.Ponente
    </div>
    
    <div class="card-footer text-body-secondary">
		Fecha: @capacitacion?.FechaHora.ToString("dd/MM/yyyy") Hora: @capacitacion?.FechaHora.ToString("HH:mm")
    </div>
    <div class="card-body">
        <h5 class="card-title">@capacitacion?.Nombre</h5>
        <p class="card-text">@capacitacion?.Detalle</p>
        <a href="#" class="btn btn-primary">Inscribirme</a>
    </div>
</div>
@code {
    [Parameter]
    public Capacitacion? capacitacion { get; set; }



}
